<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".PantallaUno_IncendioReportando">


    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="50dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="200dp"
            android:layout_height="46dp"
            android:gravity="center_horizontal"
            android:text="Usuario:"
            android:textColor="#000"
            android:id="@+id/txtUsuPant1"/>
        <TextView
            android:layout_width="200dp"
            android:layout_height="46dp"
            android:text="Email:"
            android:textColor="#000"
            android:gravity="center_horizontal"
            android:id="@+id/txtEmailPant1"/>

    </LinearLayout>

    <TextView
        android:id="@+id/txtListaDeIncendios"
        android:layout_width="410dp"
        android:layout_height="46dp"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        android:orientation="horizontal"
        android:text="LISTA GENERAL DE INCENDIOS"
        android:textColor="#000"
        android:fontFamily="cursive"
        android:textSize="20dp"
        android:textStyle="bold"
        android:gravity="center_horizontal" />


    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="543dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="0dp">

    </androidx.recyclerview.widget.RecyclerView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <Button
            android:id="@+id/butIncendioPend"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:clickable="true"
            android:text="Incendios Pendientes"
            android:layout_marginLeft="5dp"
            android:background="#C8CA1A" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/BotonFlotante1"
            android:layout_width="15dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:clickable="true"
            android:layout_marginLeft="200dp"
            android:src="@drawable/add1"
            android:background="#A3A526"
            android:focusable="true" />

        <Button
            android:id="@+id/googleLogOut"
            android:layout_width="15dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:clickable="true"
            android:text="LogOut"
            android:layout_marginLeft="5dp"
            android:background="#C8CA1A" />
    </LinearLayout>



</LinearLayout>